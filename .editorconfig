root = true

[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.py]
indent_size = 4
max_line_length = 120

[*.sh]
indent_size = 4

[*.sql]
indent_size = 4

[*.md]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2
